package Lin.Wechat.MainEntry.Sender;

import java.util.HashMap;

import cn.hutool.http.HttpRequest;
import cn.hutool.json.JSONObject;

public class Sender {
	
	public void sendMsg(String to) {
		HashMap<Object, Object> map = new HashMap<>(); 
		map.put("method", "sendText");
		map.put("wxid", to);
		map.put("msg", "https://www.baidu.com/");
		map.put("atid", "");
		map.put("pid",0);
		send();
	}
	
	public void send(HashMap map) {
	    String json = (new JSONObject(map)).toString();
	    HttpRequest request = HttpRequest.post(apiHttp).body(json);
	    System.out.println(request.execute().body());
	}
}